<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/subject_body"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dip"
        android:includeFontPadding="false"
        android:lineSpacingExtra="4dp"
        android:lineSpacingMultiplier="1.2"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:includeFontPadding="false"
            android:text="@string/label_creation_date"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/subject_created_date"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:includeFontPadding="false"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:includeFontPadding="false"
            android:text="@string/label_last_update"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/subject_last_update"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:includeFontPadding="false"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTodoRemind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dip"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btnTodo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:background="#00000000"
            android:contentDescription="@string/tab_todo"
            android:focusable="false"
            android:src="@drawable/ic_flag"
            android:tint="#ccc" />

        <ImageButton
            android:id="@+id/btnRemind"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:background="#00000000"
            android:contentDescription="@string/tab_todo"
            android:focusable="false"
            android:src="@drawable/ic_alarm"
            android:tint="#ccc" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTodo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dip"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/btnTodo1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="2dp"
                android:background="#00000000"
                android:contentDescription="@string/tab_todo"
                android:focusable="false"
                android:src="@drawable/ic_flag"
                android:tint="#ccc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:includeFontPadding="false"
                android:text="@string/label_todo"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:includeFontPadding="false"
                android:text="@string/label_todo_plan_start_date"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/subject_start_date"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:includeFontPadding="false"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:includeFontPadding="false"
                android:text="@string/label_todo_done_date"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/subject_done_date"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:includeFontPadding="false"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutRemind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dip"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/btnRemind1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="2dp"
                android:background="#00000000"
                android:contentDescription="@string/tab_todo"
                android:focusable="false"
                android:src="@drawable/ic_alarm"
                android:tint="#ccc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:includeFontPadding="false"
                android:text="@string/label_remind"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:includeFontPadding="false"
                android:text="@string/label_remind_date"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/subject_remind_date"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:includeFontPadding="false"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:includeFontPadding="false"
                android:text="@string/label_remind_frequency"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/subject_remind_frequency"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:includeFontPadding="false"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>